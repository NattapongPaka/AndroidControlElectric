                android:id="@+id/mainln1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/cmdDevice1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/power_e"
                    android:textOff=""
                    android:textOn="" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txtDevice1"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.35"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="อุปกรณ์ที่ 1 ปิด"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtWattDevice1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="อัตราค่าไฟฟ้า  0 ฿/ชม"
                        android:textSize="16sp" />
                </LinearLayout>            
                
                
                <ImageButton
                    android:id="@+id/viewDevice1"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/more_e"  
                    android:background="@android:color/transparent"                
                     />
            </LinearLayout>

